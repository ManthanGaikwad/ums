<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css"/>
    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
   
</head>
<body>

    <section>
        <div class="container m-3 ">
            <i class='bx bx-chevrons-left bx-flashing mx-1' ></i>
            <a href="/admin/home" class="text-decoration-none"> Dashboard </a>
        </div>
    </section>
    
    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class=" text-black"> <i class='bx bxs-user-detail bx-flip-horizontal' style='color:#a02424' ></i> Users</h1>
                </div>
                <div class="col-lg-6 align-items-center ">
                    <button class="btn btn-outline-primary shadow-lg p-3 mb-5 bg-body rounded">
                        <a href="/admin/new-user" class=" text-decoration-none"><i class='bx bx-add-to-queue bx-burst text-black' ></i> Add new user</a>
                    </button>
                </div>
            </div>
        </div>
    </section>
    
    
    <section class="mt-3">
        
   <div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center ">
                <thead>    
                    <tr class="table-dark text-center cell-border">
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Image</th>
                        <th>Verified</th>
                        <th>
                            Action
                        </th>
                    </tr>

                </thead>

                <tbody>
                    <%
                    if(users.length > 0){
                        for(let i=0; i<users.length; i++){
                            %>
                            <tr class="align-middle">
                                <td><%= users[i].name %></td>
                                <td><%= users[i].email %></td>
                                <td><%= users[i].mobile %></td>
                                <td><img src="<%= users[i].image %>" alt="<%= users[i].mobile %>" width="50" class=" img-fluid img-thumbnail"></td>
                                <td><%
                                    if( users[i].is_verified == 0){
                                        %>
                                        <p>Not verified</p>
                                        <%
                                    }
                                    else{
                                        %>
                                        <p>verified</p>
                                        <%
                                    }
                                    %></td>
    
                                    <td>
                                        <a href="/admin/edit-user?id=<%= users[i]._id %>" class="text-success"><i class="fa-solid fa-pen-to-square mx-2"></i></a>
                                        <a href="/admin/delete-user?id=<%= users[i]._id %>" class="text-danger"><i class='bx bxs-trash-alt bx-tada mx-2' ></i></a>
                                    </td>
    
                            </tr>
                            <%
    
                        }
                    }else{
                        %>
                        <tr>
                            <td colspan="5" class="text-center mt-5 text-secondary">Users Not found </td>
                        </tr>
                        <%
                    }
                %>
                </tbody>

                </table>
            </div>
        </div>
    </div>
   </div>

    </section>
    

    



    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script>
        $(document).ready(function(){
        $("table").DataTable({
          order:[0, 'desc']
        })
      })
    </script>
</body>
</html>