<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link rel="Shortcut Icon" type="image/jpg" href="/public/Images/music-1.jpg">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <% 
    if(typeof message !=='undefined'){
        %>
    
        <p style="color: green ;"> <%= message %></p>
    
        <%
    }
    %>
    
      <div class="container">
        <div class="card shadow mx-auto mt-4" style="width: 350px; ;">
          <h2 class="text-primary text-center mt-2">Sign In</h2>
          <hr class="m-auto text-black" style="width: 50px; ">

          <div class="container mt-2">
            <form class="row g-3" action="" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <input type="text" class="form-control" placeholder=" Name" value="" name="name" required>
              </div>

              <div class="form-group">
                <input type="email" class="form-control" placeholder="email" value="" name="email" required>
              </div>
              <div class="form-group">
                <input type="text"  class="form-control" minlength="10" maxlength="10" placeholder="phone number"
                  value="" name="mno" required>
              </div>
              <div class="form-group">
                <input type="file" name="image" required>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" placeholder="password" value="" name="password" required>
              </div>

              

             

              <div class="col-12">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                  <label class="form-check-label" for="invalidCheck2">
                    Agree to terms and conditions
                  </label>
                </div>
              </div>
              <div class="col-12">
                <input type="submit" class="btn btn-primary w-100 mb-1" value="register">
              </div>
            </form>
          </div>
        </div>
      </div>


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>